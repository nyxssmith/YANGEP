{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug yangep (LLDB, macOS)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/yangep",
            "cwd": "${workspaceFolder}/build",
            "MIMode": "lldb",
            "stopAtEntry": false,
            "externalConsole": false,
            "args": [],
            "environment": [
              { "name": "ASAN_OPTIONS", "value": "abort_on_error=1,fast_unwind_on_malloc=0,strict_string_checks=1,detect_leaks=1" }
            ]
        },
        {
            "name": "Open Core Dump (LLDB, macOS)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/yangep",
            "cwd": "${workspaceFolder}/build",
            "MIMode": "lldb",
            "coreDumpPath": "/cores/core.yangep"   // set to actual core file
        },
        {
            "name": "Debug YANGEP (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/yangep",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Project",
            "miDebuggerPath": "/usr/bin/gdb",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            }
        },
        {
            "name": "Debug YANGEP (macOS)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/yangep",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build Project"
        },
        {
            "name": "Debug Core Dump (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/yangep",
            "cwd": "${workspaceFolder}/build",
            "coreDumpPath": "${workspaceFolder}/core.dump",
            "MIMode": "gdb",
            "preLaunchTask": "Get Latest Core Dump",
            "setupCommands": [
                {
                    "description": "Enable pretty printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb" // Adjust path to gdb if necessary
        }
    ]
}
